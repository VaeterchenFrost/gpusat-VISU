\definecolor{mdwblue}{HTML}{0b2a51}

\setlength{\TPHorizModule}{1cm}
\setlength{\TPVertModule}{1cm}

\mode<presentation>
{
  \usetheme{default}

  \setbeamercovered{again covered={\opaqueness<1->{0}}}
  \setbeamertemplate{bibliography item}[text]

  \setbeamersize{text margin left=0.8cm}
  \setbeamersize{text margin right=0.8cm}

  \setbeamerfont{frametitle}{size=\large,series=\bfseries}
  \setbeamercolor{frametitle}{fg=OrangeRed1}
  \addtobeamertemplate{frametitle}{\hspace*{0.2cm}}{}

  \setbeamertemplate{itemize item}
                    {\textcolor{OrangeRed1}{\normalsize $\blacktriangleright$}}
  \setbeamertemplate{itemize subitem}
                    {\textcolor{OrangeRed1}{\normalsize $\triangleright$}}
  \setbeamertemplate{itemize subsubitem}
                    {\textcolor{OrangeRed1}
                    {\normalsize $\blacktriangleright\!\!\blacktriangleright$}}

  \setbeamerfont{titlelike}{series=\bfseries}

  \setbeamerfont{itemize/enumerate subsubbody}{series=\bfseries,size*={8}{10}}
  \setbeamerfont{itemize/enumerate subbody}{series=\bfseries,size*={8}{10}}
  \setbeamerfont{itemize/enumerate body}{series=\bfseries,size*={8}{10}}

  \setbeamercolor{mdwblue}{bg=mdwblue,fg=white}

  \setbeamertemplate{headline}{
   \begin{beamercolorbox}[sep=0.08cm]{mdwblue}
   \hspace{0.45cm}\includegraphics[width=0.13\hsize]{icclslides/logo_tud.png}
   \end{beamercolorbox}}

  \setbeamertemplate{footline}{
   \begin{beamercolorbox}[sep=0.08cm]{mdwblue}
   \hspace{0.45cm}
   \raisebox{0.04cm}{
   \begin{tabular}[b]{p{5.09cm}p{0.5cm}}
   {\fontsize{4.8}{3ex} \selectfont \Myauthor , \today
    \raisebox{-1.5pt}{\rule{0cm}{6pt}} }\\[-0.048cm]
   {\fontsize{4.8}{3ex} \selectfont \Mytitle 
    \raisebox{-1.5pt}{\rule{0cm}{6pt}}} &
   {\fontsize{4.8}{3ex} \selectfont \insertpagenumber}
   \end{tabular}} \hspace{\fill}
	Fakult\"at f\"ur Informatik
%   \includegraphics[width=0.28\hsize]{icclslides/logo_iccl.pdf} \hspace{0.45cm}
  \end{beamercolorbox}}

}

